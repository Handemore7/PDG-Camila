import { galeriaBanner} from '../../public/assets/index'
---

<style>
    @font-face {
		font-family: "test";
		src: url("/assets/fonts/Sleepy Rabbit.ttf");
	}
</style>

<html class="scroll-smooth" lang="es">
	<head>
		<meta charset="UTF-8" />
