                    chumbeAmarillo.classList.remove('active');
                    chumbeVerde.classList.remove('active');
                    for (let index = 0; index < puntosVerdes.length; index++) {
                        puntosVerdes[index].classList.add('hidden')
                        puntosRojos[index].classList.add('hidden')
                        puntosAmarillos[index].classList.add('hidden')
                        puntosMorados[index].classList.remove('hidden')
                    }
                }
                break;
        }
    }

    function showModal(data) {
        console.log(data);
        modal.classList.toggle('hidden')
        backModal.classList.remove('hidden')

        document.querySelector('#modalTitle').textContent = data.titulo;
        document.querySelector('#modalArriba').textContent = data.arriba;
        document.querySelector('#modalAbajo').textContent = data.abajo;
    }

    function closeModal() {
        modal.classList.add('hidden')
        backModal.classList.add('hidden')
    }
</script>