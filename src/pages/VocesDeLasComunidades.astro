---
import NavBar from "../Components/NavBar.astro";
import Footer from "../Components/Footer.astro";
import {
    seccionVoces,
    voces_seccion1_1,
    voces_seccion1_2,
    voces_seccion1_3,
    voces_seccion2,
    voces_seccion3_1,
    voces_seccion3_2,
    voces2,
} from "../../public/assets/index";
---

<style>
    @import url("https://fonts.googleapis.com/css2?family=Rock+Salt&display=swap");
    @font-face {
        font-family: "test";
        src: url("/assets/fonts/Sleepy Rabbit.ttf");
    }
</style>

<div>
    <NavBar path="VocesDeLasComunidades" />
    <!-- VERSION PC -->
    <div class="max-sm:hidden ">
        <div class="relative">
            <img src={voces_seccion1_1.src} class="w-full h-[100vh]" alt="" />
            <img
                src={voces_seccion1_2.src}
                class="absolute top-[20vh] mx-auto left-[20vh]"
                alt=""
            />
            <img
                src={voces_seccion1_3.src}
                class="absolute bottom-[-5vh] right-[5vw] w-[40%]"
                alt=""
            />
        </div>
    
        <div class="bg-[#FDE0FF] h-[100vh] w-full flex">
            <img src={voces_seccion2.src} class="w-[50%] m-auto" alt="" />
        </div>
    
        <div class="bg-[#FDE0FF] flex flex-col w-full gap-10 px-[10%] text-white ">
            <div
                class="bg-[#076F28] flex flex-row w-[80%] rounded-xl px-5 pt-5 m-auto relative gap-5 hover:cursor-pointer hover:scale-105 transition-all"
            >
                <img src={voces_seccion3_1.src} class="w-[40%] mb-5" alt="" />
                <p class="font-semibold font-[test] tracking-wider text-7xl">
                    RESISTENCIA MUJERES NASA
                </p>
                <img
                    src={voces2.src}
                    class="absolute bottom-0 right-0 w-[30%]"
                    alt=""
                />
            </div>
    
            <div
                class="bg-[#FF6D6D] flex flex-col w-[80%] rounded-xl px-5 pt-5 m-auto relative gap-5 mb-10 hover:cursor-pointer hover:scale-105 transition-all"
            >
                <div class="bg-[#FF6D6D] flex flex-col">
                    <img src={voces_seccion3_2.src} class="w-[90%] m-auto" alt="" />
                    <p
                        class="px-10 py-3 font-semibold font-[test] tracking-wider text-xl"
                    >
                        COMUNIDAD LGBTQ+ EN CONSTRUCCIÓN DE PAZ
                    </p>
                </div>
            </div>
        </div>
        <div class="bg-[#292032] rounded-3xl w-full">
            <div class="flex w-full py-10">
                <img src={seccionVoces.src} class="w-[75%] m-auto" alt="" />
            </div>
            <div class="flex">
                <iframe
                    src="https://drive.google.com/file/d/1cc2p6MJS2-MEgQwTD6B8tNSjBuTh1Ven/preview"
                    width="1000"
                    height="480"
                    allow="autoplay"
                    class="m-auto mb-10"></iframe>
            </div>
        </div>
        <Footer />
    </div>
    <!-- VERSION MOBILE -->
    <div class=" bg-[#FDE0FF]">
        
        <div class="relative pt-[10vh]">
            <img src={voces_seccion1_1.src} class="w-full h-[20vh]" alt="" />
            <img
                src={voces_seccion1_2.src}
                class="absolute w-[38%] top-[11vh] mx-auto left-[5%]"
                alt=""
            />
            <img
                src={voces_seccion1_3.src}
                class="absolute bottom-[-10%] right-[5vw] w-[50%]"
                alt=""
            />
        </div>
    
        <div class="bg-[#FDE0FF] pt-10 w-full flex">
            <img src={voces_seccion2.src} class="w-[70%] m-auto" alt="" />
        </div>
    
        <div class="bg-[#FDE0FF] flex flex-col m-auto gap-10 w-[70%] text-white ">
            <div
                class="bg-[#076F28] flex flex-col w-[100%] rounded-3xl px-5 pt-5 m-auto relative gap-5 hover:cursor-pointer hover:scale-105 transition-all"
            >
                <img src={voces_seccion3_1.src} class="w-[90%] m-auto mb-5" alt="" />
                <p class="font-semibold font-[test] tracking-wider text-6xl leading-[5rem]">
                    RESISTENCIA MUJERES NASA
                </p>
            </div>
    
            <div
                class="bg-[#FF6D6D] flex flex-col w-[100%] rounded-3xl px-5 pt-5 m-auto relative gap-5 mb-10 hover:cursor-pointer hover:scale-105 transition-all"
            >
                <div class="bg-[#FF6D6D] flex flex-col">
                    <img src={voces_seccion3_2.src} class="w-[90%] m-auto" alt="" />
                    <p
                        class="px-3 py-3 font-semibold font-[test] tracking-wider leading-[5rem] text-6xl"
                    >
                        COMUNIDAD LGBTQ+ EN CONSTRUCCIÓN DE PAZ
                    </p>
                </div>
            </div>
        </div>
        <div class="bg-[#292032] rounded-3xl w-full">
            <div class="flex w-full py-10">
                <img src={seccionVoces.src} class="w-[75%] m-auto" alt="" />
            </div>
            <div class="flex">
                <iframe
                    src="https://drive.google.com/file/d/1cc2p6MJS2-MEgQwTD6B8tNSjBuTh1Ven/preview"
                    width="800"
                    height="480"
                    allow="autoplay"
                    class="m-auto mb-10"></iframe>
            </div>
        </div>
        <Footer />
    </div>
    
</div>
